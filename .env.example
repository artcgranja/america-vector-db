# .env.example

# Variáveis de ambiente para configurar o micro-serviço

# Chave de API do OpenAI para gerar embeddings e interagir com o modelo

OPENAI_API_KEY=

# URI de conexão com PostgreSQL + pgvector (formato SQLAlchemy)

DATABASE_URL=postgresql+psycopg://<USER>:<PASSWORD>@<HOST>:<PORT>/\<DB_NAME>

# Parâmetros de chunking: tamanho máximo e overlap entre chunks

CHUNK_SIZE=1000
CHUNK_OVERLAP=100

# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)

LOG_LEVEL=INFO

# Configurações do servidor FastAPI

HOST=0.0.0.0
PORT=8000